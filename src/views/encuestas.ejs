        h += '<nav aria-label="Page navigation example"><ul class="pagination justify-content-center"><li class="page-item">';
        h += '<a class="page-link" href="#">Anterior</a></li><li class="page-item"><a class="page-link" href="#">1</a></li>';
        h += '<li class="page-item"><a class="page-link" href="#">2</a></li> <li class="page-item"><a class="page-link" href="#">3</a></li>';
