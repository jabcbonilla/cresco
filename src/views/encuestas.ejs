        var tabla = document.createElement("table");

        var h = '<div class="card mb-3" id="cuerpo"><table class="table table-bordered table-hover">';
        h += '<thead><tr><th>Código</th><th>Título</th><th>Opciones</th> </tr></thead><tbody><% for(var i = 0; i < tasks.length; i++){ %>';
