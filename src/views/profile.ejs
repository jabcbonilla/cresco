<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    
    <script type="text/javascript" src="./campos.js"></script>
    <title>Profile Page</title>
    <% include partials/head %>
  </head>
  <body>
    <div class="container">
      <header class="text-center">
        <h1>Profile Page</h1>
        <a href="/logout" class="btn btn-light btn-sm">
          Logout
        </a>
      </header>
      <hr>
      <div class="container">
        <div class="col-bg-12">
          <div class="card">
            <div class="card-body">
              <h3 class="card-title"><span class="fa fa-user"></span> Local</h3>
              <p>
                <strong>id</strong> : <%= user._id %> <br>
                <strong>email</strong> : <%= user.local.email %> <br>
                <strong>password</strong> : <%= user.local.password %>
              </p>
              <a href="/logout" class="btn btn-light btn-sm">
                Logout
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>

<!-- ENCUESTAS -->




<div class="container">
  <div class="row">
    <!--Formulario-->
    <div class="col-md-5">
      <div class="card">
        <div class="card-body">
          <form >
            <div class="form-group">
              <input type="text" name="valor" placeholder="Escriba la pregunta" class="form-control">

              <form action="" >
                <h5 class="text-center">Tipo de pregunta</h5>
                <input type="radio" name="surveyType" value="simple"> Selección simple<br>
                <input type="radio" name="surveyType" value="multiple"> Selección múltiple<br>
                <input type="radio" name="surveyType" value="dicotomica"> Dicotómica (Sí o no)<br>
              </form>

<!-- FIN ENCUESTAS -->
       
  <div id="main">
<input type="button" id="btAdd" value="Añadir Elemento" class="bt" />
<input type="button" id="btRemove" value="Eliminar Elemento" class="bt" />
<input type="button" id="btRemoveAll" value="Eliminar Todo" class="bt" /><br />
</div>
          
          <div class="container">
            <div class="row">
              
                <h4 class="col-md-12">Opciones</h4>
                  <input type="text" name="valor" placeholder="Escriba la opción" class="form-control col-md-7">
                  <input type="number" name="quantity" min="1" max="5" value="1" class="form-control col-md-3">
                
              
            </div>
          </div>
           <button class="btn btn-success col-md-2">+</button>
          <div class="container">
            <form>
              <div class="col-md-12">
                
              </div>
            </form>
          </div>

            </div>
            
            
          </form>
          <button action="/agregar" method="POST" class="btn btn-primary btn-block" type="submit">Añadir</button>
        </div>
      </div>
    </div>



<!--Lista-->
  <div class="col-md-7">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Pregunta</th>    
          <th>Tipo</th>   
          <th>Opciones</th>
          
        </tr>
      </thead>
      <tbody>
        <% for(var i = 0; i < tasks.length; i++){ %>
          <tr>
            
            <td><%= tasks[i].pregunta %></td>
            <td><%= tasks[i].tipo %></td>
            <td>
              <a href="/listo/<%= tasks[i]._id %>" class="btn <%= tasks[i].estatus ? 'btn-success' : 'btn-dark' %>">Ver gráfico</a>
              <a href="/eliminar/<%= tasks[i]._id %>" class="btn btn-danger">Eliminar</a>
              
            </td>
          </tr>
        <% } %>
      </tbody>
        
      </table>
    </div>
  </div>
</div>


<div class="chart-container" style="position: relative; height:40vh; width:80vw">
    <canvas id="myChart" ></canvas>
<script>
var ctx = document.getElementById('myChart').getContext('2d');
var chart = new Chart(ctx, {
    // The type of chart we want to create
    type: 'bar',

    // The data for our dataset
    data: {
        labels: ['<%= tasks[0].opc1 %>', '<%= tasks[0].opc %>'],
        datasets: [{
            label: ['Personas que respondieron positivamente'],
          
            backgroundColor: 'rgb(255, 99, 132)',
            borderColor: 'rgb(255, 99, 132)',
            data: [<%=tasks[0].cant1 %>, 10, 5, 2, 20, 30, 45],
            
        },
        {
            label: ['Personas que no respondieron'],
          
            backgroundColor: 'rgb(255, 19, 12)',
            borderColor: 'rgb(255, 99, 132)',
            data: [<%= tasks[1].cant4  %>, 10, 5, 2, 20, 30, 45],
        }
        ]
    },

    // Configuration options go here

    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});
</script>
</div>
  </body>
</html>
